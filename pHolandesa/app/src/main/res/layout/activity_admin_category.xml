<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">
    
    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Añadir un nuevo producto"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/bCalientes"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cafe"
            android:layout_marginStart="10dp"
            />

        <ImageView
            android:id="@+id/bedidas"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/refresco"
            android:layout_marginStart="10dp"
            />

        <ImageView
            android:id="@+id/pan"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/pan"
            android:layout_marginStart="10dp"
            />

        <ImageView
            android:id="@+id/galletas"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cookie"
            android:layout_marginStart="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/huevos"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/tortilla"
            android:layout_marginStart="10dp"
            />

        <ImageView
            android:id="@+id/sopas"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sopa"
            android:layout_marginStart="10dp"
            />

        <ImageView
            android:id="@+id/lacteos"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/lacteos"
            android:layout_marginStart="10dp"
            />

        <ImageView
            android:id="@+id/embutidos"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/embutidos"
            android:layout_marginStart="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/paquetes"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/papas"
            android:layout_marginStart="10dp"
            />

        <ImageView
            android:id="@+id/helados"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/helado"
            android:layout_marginStart="10dp"
            />

        <ImageView
            android:id="@+id/dulces"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/golosinas"
            android:layout_marginStart="10dp"
            />

        <ImageView
            android:id="@+id/bAlcoholicas"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/beer"
            android:layout_marginStart="10dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="Ver Ordenes Nuevas"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimaryDark"
        android:text="Cerrar Sesión"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        />

</RelativeLayout>